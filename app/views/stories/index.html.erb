<h1>Sup</h1>
<%= link_to "New Story", new_image_story_path(Image.all.sample) %>

<% @stories.each do |story| %>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-md-2">
          <div style="float: left">
            <%= image_tag(story.image.url, class: "thumbnail") %>
          </div>
        </div>
        <div class="col-md-6">
          <h3><%= story.body %></h3>
        </div>
      </div>
      <div class="panel-heading" style="text-align: right">
        <%= story.user.name %>
      </div>
    </div>
  </div>
<% end %>

<%= will_paginate @stories, renderer: BootstrapPagination::Rails %>
