<%= will_paginate @images, renderer: BootstrapPagination::Rails %>

<h1>Most Recent Best Sellers</h1>
<%= link_to "New Contribution", new_image_contribution_path(Image.all.sample) %>

<% @images.each do |image| %>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to image_path(image) do %>
        <div class="col-md-2">
          <div style="float: left">
            <%= image_tag(image.url, class: "thumbnail") %>
          </div>
        </div>
        <div class="col-md-6">
          <% image.contributions.each do |contribution| %>
            <p><%= contribution.body %><span style="color:#999;"> ~ <%= contribution.user.name %></span></p>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= will_paginate @images, renderer: BootstrapPagination::Rails %>
